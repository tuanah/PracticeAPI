<div class="jumbotron">
    <h3>Information</h3>
    <div class="row">
        <div class="form-group col-md-8">
            <label>Name: </label>
            <input type="text" class="form-control" id="txtName" placeholder="Nguyen Van A">
            <span class="text-danger d-none" id="wName">Enter your name!</span>
        </div>
        <div class="form-group col-md-4">
            <label>Gender: </label>
            <br>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" class="custom-control-input" name="gender" id="maleRadio" value="Male">
                <label class="custom-control-label" for="maleRadio">Male</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" class="custom-control-input" name="gender" id="femaleRadio" value="Female">
                <label class="custom-control-label" for="femaleRadio">Female</label>
            </div>

            @*<label class="form-check-label ml-4">
