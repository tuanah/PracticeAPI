        <label class="form-check-label ml-4">
            <input type="radio" class="form-check-input" name="gender" value="Female">Female
        </label>*@
        </div>

    </div>
    <div class="row">
        <div class="form-group col-md-4 ">
            <label>Phone: </label>
            <input type="text" class="form-control" id="txtPhone" placeholder="0123456789">
            <span class="text-danger d-none" id="wPhone">Enter Phone number!</span>
        </div>
        <div class="form-group col-md-4">
            <label>Email: </label>
            <input type="email" class="form-control" id="mail" placeholder=" abc@abc.com ">
            <span class="text-danger d-none " id="wMail">Enter your Email!</span>
        </div>
        <div class="form-group col-md-4 ">
            <label>Address: </label>
            <input type="text" class="form-control" id="txtAddress" placeholder="Hồ Chí Minh ">
            <span class="text-danger d-none " id="wAddress">Enter your Address!</span>
        </div>
    </div>
    <div class="d-flex justify-content-around mt-3 row ">
        <button class="btn btn-primary d-block col-sm-2 col-md-2 mx-1 mb-1" id="btnAdd">Add to Table</button>
        <button class="btn btn-primary d-block col-sm-2 col-md-2 mx-1 mb-1" id="btnFind">Find</button>
        <button class="btn btn-primary d-block col-sm-2 col-md-2 mx-1" id="btnCreate" data-toggle="modal" data-target="#createModal">Create</button>
    </div>
</div>


