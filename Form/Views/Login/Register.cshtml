
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="row my-sm-5">
    <div class="card o-hidden border-0 shadow-lg col-12 my-sm-5 my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                        </div>
                        <form class="user">
                            <div class="form-group">
                                <input type="text" class="form-control form-control-user" id="inputUsername" placeholder="User Name">
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="password" class="form-control form-control-user" id="inputPassword" placeholder="Password">
                                </div>
                                <div class="col-sm-6">
                                    <div class="row">
                                        <div class="col-10">
                                            <input type="password" class="form-control form-control-user" id="repeatPassword" placeholder="Repeat Password" oninput="checkRepeatPassword()">
                                        </div>
                                        <div class="col-2 h4 p-0 my-auto" id="eyeIcon">
                                            <i class="far fa-eye"></i>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                            <div class="text-danger ml-2 d-none" id="alertBox">
                                <p>*Those passwords didn't match. Try again.</p>
                            </div>
                            <div class="d-flex justify-content-center">
                                <a href="#" class="col-sm-8 btn btn-primary btn-user btn-block" onclick="register()">
                                    Register Account
                                </a>
                            </div>
                            <div class="btn" onclick="get()">Get</div>
                        </form>
                        <hr>
                        <div class="text-center">
                            <a class="small" href="Forget">Forgot Password?</a>
                        </div>
                        <div class="text-center">
                            <a class="small" href="Index">Already have an account? Login!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
