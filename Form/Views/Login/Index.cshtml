
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<!-- Outer Row -->
<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9 my-sm-5">
        <div class="card o-hidden border-0 shadow-lg my-sm-5 my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                            </div>
                            <form class="user">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user" id="usr" aria-describedby="emailHelp" placeholder="Enter your Username...">
                                </div>

                                <div class="form-group">
                                    <input type="password" class="form-control form-control-user" id="pass" placeholder="Password">
                                </div>

                                <div class="text-danger ml-3 d-none" id="loginError">
                                    <p>*Wrong Username or Password </p>
                                </div>
                                <button type="button" class="btn btn-primary btn-block btn-user" onclick="checkLogin()">Login</button>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="/Login/Forget">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="/Login/Register">Create an Account!</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

